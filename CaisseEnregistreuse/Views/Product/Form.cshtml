@{
    // ViewData["Title"] = "Ajouter un produit";
    ViewData["Title"] = ViewData["Title"] ?? "Product Form";

}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form method="post">
        <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input type="text"
                   class="form-control"
                   id="Name"
                   name="Name"
                   placeholder="Enter Name">

        </div>

        <div class="form-group mt-3">
            <label for="exampleInputPassword1">Price</label>
            <input type="text"
                   class="form-control"
                   id="Price"
                   name="Price"
                   placeholder="Price">
        </div>
          <div class="form-group mt-3">
            <label for="exampleInputPassword1">Stock</label>
            <input type="text"
                   class="form-control"
                   id="stock"
                   name="stock"
                   placeholder="stock">
        </div>
            <div class="form-group d-flex gap-2 mt-3">

            <button type="submit" class="btn btn-primary mt-3">
                Submit
            </button>
            <a href="/Product/Index/" class="btn btn-primary mt-3">
                Return to product
            </a>
        </div>

    </form>
    @if (ViewData["Message"] != null)
    {
        <div class="alert alert-success">
            @ViewData["Message"]
        </div>
    }


</div>
